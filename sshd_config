PermitRootLogin no
StrictModes yes

RSAAuthentication no ## only for protocal version 1
PubkeyAuthentication yes ## protocal version 2
#AuthorizedKeysFile	%h/.ssh/authorized_keys

# Don't read the user's ~/.rhosts and ~/.shosts files
IgnoreRhosts yes
